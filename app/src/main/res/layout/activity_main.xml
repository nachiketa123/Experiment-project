<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf9a9"
    android:id="@+id/relative2"
    tools:context="com.example.nachu.mathgame.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome To The MathGame.. Lets See How Far Can You Go"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:id="@+id/welcome"
        android:textColor="@color/colorPrimary"
        android:fontFamily="monospace"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/action">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="50"
            android:src="@drawable/ic_play_circle_filled_white_36dp"
            android:id="@+id/play"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:background="#fd0241"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#fd0241"
            android:layout_weight="70"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/rg"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbtn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:buttonTint="@color/white"
                android:text="1 min" />
            <RadioButton
                android:id="@+id/rdbtn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/action"
                android:layout_alignParentStart="true"
                android:buttonTint="@color/white"
                android:text="2 min" />
            <RadioButton
                android:id="@+id/rdbtn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/action"
                android:layout_alignParentStart="true"
                android:buttonTint="@color/white"
                android:text="3 min"
                />
        </RadioGroup>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:clickable="true"
            android:src="@drawable/ic_share_white_36dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/share"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#fd0241"/>
    </LinearLayout>



</RelativeLayout>
