<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ecf9a9"
    android:id="@+id/relative1"
    tools:context="com.example.nachu.mathgame.GameScreen">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:gravity="left"
        android:text="TIME :  05"
        android:textColor="#ca171b"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_weight="1"

        android:text="SCORE  00"
        android:textColor="#CA171B"
        android:textSize="30sp" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="150dp"
        android:textSize="45sp"
        android:id="@+id/que"
        android:textColor="#242eea"
        android:text="11+64"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="190dp"
        android:textSize="45sp"
        android:id="@+id/ans"
        android:textColor="#242eea"
        android:text="=75"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/linear2">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_check_white_36dp"
            android:background="#fd0241"
            android:layout_marginRight="1dp"
            android:id="@+id/correct"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_clear_white_36dp"
            android:background="#fd0241"
            android:layout_marginLeft="1dp"
            android:id="@+id/wrong"/>
    </LinearLayout>
</RelativeLayout>




